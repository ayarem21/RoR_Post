<p id="notice"><%= notice %></p>

<style>
  .nested_comments {
    margin-left: 30px;
  }
</style>

<div class="container alert alert-light">
  <p>
    <strong>Name:</strong>
    <%= full_name(@post) %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <p>
    <strong>Image:</strong>
    <p><%= image_tag @post.file, width: '75%'%>
    </p>
  </p>


  <p>
    <strong>It was created <%= distance_of_time_in_words(Time.now.hour, Time.now-@post.created_at) %> ago.<strong>
  </p>
  <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-warning"%>
  <%= link_to 'Back', posts_path, class:"btn btn-secondary"%>


  <br>
  <br>
  <br>


</div>
<h3>All comments</h3>
<%= nested_comments @post.comments.arrange(order: :created_at)  %>
<%= render 'comments/form' %>