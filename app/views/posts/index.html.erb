<p id="notice"><%= notice %></p>

<div class="alert alert-primary">
  <h1>Posts</h1>
</div>
<script src="https://kit.fontawesome.com/cea9c7549d.js" crossorigin="anonymous"></script>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= full_name(post) %> </td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>

        <td><%= link_to 'Show', post, class:"btn btn-outline-success" %>
          <%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-warning"%>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
