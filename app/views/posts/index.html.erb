<p id="notice"><%= notice %></p>

<div class="alert alert-primary">
  <h1>Posts</h1>
</div>

  <% @posts.each do |post| %>
  <div class="container, alert alert-secondary">
  <div class="list group-item">
    <div>
      <i class="fas fa-address-book"></i>
      <strong>Author:</strong>
    </div>
    <div><%= full_name(post) %> </div>


    <div>
      <i class="fab fa-accusoft"></i>
      <strong>Title:</strong>
    </div>
    <div><%= post.title %></div>

    <div>
      <i class="fab fa-adversal"></i>
      <strong>Content:</strong>
    </div>
    <div><%= post.content %></div>
    <div>
      <div><i class="fas fa-binoculars"></i>
      <%= post.impressions_count %></div>
    </div>

    <div>
      <div><%= link_to 'Show', post, class:"btn btn-outline-success" %>
        <% if current_user && current_user.id == post.author_id %>
        <%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-warning"%>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"%></div>
        <% end %>
    </div>
  </div>
  </div>
    <% end %>

  <% if current_user %>
    <div><%= link_to 'New post', new_post_path, class: "btn btn-primary"%></div>
  <% end %>


