<p id="notice"><%= notice %></p>
<script src="https://kit.fontawesome.com/cea9c7549d.js" crossorigin="anonymous"></script>

<div class="alert alert-primary">
  <h1>Posts</h1>
</div>

  <% @posts.each do |post| %>
  <div class="container, alert alert-secondary">
  <div class="list group-item">
    <div>
      <i class="fas fa-address-book"></i>
      <strong>Author:</strong>
    </div>
    <div><%= full_name(post) %> </div>


    <div>
      <i class="fab fa-accusoft"></i>
      <strong>Title:</strong>
    </div>
    <div><%= post.title %></div>

    <div>
      <i class="fab fa-adversal"></i>
      <strong>Content:</strong>
    </div>
    <div><%= post.content %></div>

    <div>
      <div><%= link_to 'Show', post, class:"btn btn-outline-success" %>
           <%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-warning"%>
           <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"%></div>
    </div>
  </div>
  </div>
    <% end %>
  <div><%= link_to 'New post', new_post_path, class: "btn btn-primary"%></div>


