<p id="notice"><%= notice %></p>

<div class="alert alert-primary">
  <h1>Posts</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= Author.find(post.author_id).first_name %> <%= Author.find(post.author_id).last_name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>

        <td><%= link_to 'Show', post, class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-warning"%></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- -->
<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary"%>
