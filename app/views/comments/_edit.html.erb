<div class="container hide_form">
  <%= form_with(model: [ @post, @comment ]) do |f| %>
    <div class="form-group row edit">
      <%= f.hidden_field :parent_id, value: @comment.parent_id %>
      <%= f.label :body,"Add comment", class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_area :body, class:"form-control" %>
      </div>
    </div>

    <div class="actions edit" style="padding-bottom: 5%">
      <%= f.submit  class:"btn btn-outline-success" %>
    </div>
  <% end %>
</div>